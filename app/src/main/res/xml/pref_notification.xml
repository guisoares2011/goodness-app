         when checked/unchecked. -->
    <PreferenceCategory
        android:title="@string/pref_category_notification"
        android:key="pref_key_storage_settings">
            <SwitchPreference
                android:key="pref_notification_enable_suggestions"
                android:title="@string/pref_notification_enable_suggestions"
                android:defaultValue="true" />
    </PreferenceCategory>


</PreferenceScreen>
